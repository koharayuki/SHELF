<div class="card">
  <div class="card__body">
    <%= link_to article.title, article_path(article.id), method: :get, class: :card__title%>
    <p class="card__summary">
      <%= article.text %>
    </p>
    <%= link_to article.user.nickname, user_path(article.user.id), method: :get, class: :card__user %>
  </div>
</div>
