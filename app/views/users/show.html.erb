<header class="header">
  <div class="inner">
    <div class="nav">
      <div class="nav__left">
        <%= link_to image_tag("SHELF_set.png", class: :logo), root_path %>
      </div>
      <div class="nav__right">
        <%= link_to "フォロー", '/users/:user_id/followings', class: :nav__text %>
        <%= link_to "フォロワー", user_followers_path(current_user.id), class: :nav__text %>
        <%= link_to "お気に入り",  '/articles/:article_id/favorites', class: :nav__text %>
      </div>
    </div>
  </div>
</header>

    <div class="main">
      <div class="inner">
        <div class="user__wrapper">
          <h2 class="page-heading">
            <%= "#{@user.nickname}さんの情報"%>
          </h2>
          <table class="table">
            <tbody>
              <tr>
                <th class="table__col1">名前</th>
                <td class="table__col2"><%= @user.nickname %></td>
              </tr>
              <%# <tr>
                <th class="table__col1">好きなジャンル</th>
                <%# <td class="table__col2"><%= @articles.genre.name %></td> %>
              <%# </tr> %> %>
              <tr>
                <th class="table__col1">フォロワー</th>
              </tr>
                <h3>フォロー</h3>
                  <% @user.followings.each do |user| %>
                  <p class=“f-user”><%= link_to user.nickname, user_path(user.id) %></p>
                <% end %>
                <h3>フォロワー</h3>
                <% @user.followers.each do |user| %>
                  <p class=“f-user”><%= link_to user.nickname, user_path(user.id) %></p>
                <% end %>
            </tbody>
          </table>
          <h2 class="page-heading">
            <%= "#{@user.nickname}さんの記事"%>
          </h2>
          <div class="user__card">
            <%# 一覧を表示する %>
          <%= render partial: "articles/article", collection: @articles %>
          </div>
            <% if current_user != @user %>
              <div class="follow_page">
                <% if @user.followed_by?(current_user) %>
                  <%=link_to "フォロー中", user_follows_path(@user.id),class: "btn" , method: :delete %>
                <% else %>
                  <%=link_to "フォローする", user_follows_path(@user.id),class: "btn" ,method: :post %>
                <% end %>
              </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>