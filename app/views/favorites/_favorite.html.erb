<div class="tweet">
  <p class = "tweet-text"><%= @article.text %></p>
  <div class="tweet-name">
    <%= link_to  "投稿者：#{@article.user.nickname}", user_path(@article.user)%>
  </div>
  <div id="like-btn<%= @article.id %>">
    <% if user_signed_in? && @article.favorited_by?(current_user)%>
      <%=link_to "いいね済", article_favorites_path(@article.id),  method: :delete, class: "tweet_likes" %>
    <% else %>
      <%=link_to "いいねする", article_favorites_path(@article.id), method: :post, class: "tweet_likes" %>
    <% end %>
  </div>
</div>